fn mandelbrot(c_x : f64, c_y : f64, n : i32) -> i32 {
	x_n := 0.0;
	y_n := 0.0;
	x_n_1 := 0.0;
	y_n_1 := 0.0;

	for(i := 0; i < n; i = i + 1;){
		x_n_1 = x_n * x_n - y_n * y_n + c_x;
		y_n_1 = 2 * x_n * y_n + c_y;

		if(x_n_1 * x_n_1 + y_n_1 * y_n_1 > 4.0){
			ret n;
		} else {
			x_n = x_n_1;
			y_n = y_n_1;
		}
	}
	ret 0;
}
fn mandel(){	
	times := 500;
