}

fn display(arr : i32[15]){
	k := i32 15;
	l := 0;
	while(k > 0) {
		l = 0;
		while(l < 15) {
			if(arr[l] >= k) {
				writef("*");
			}
			else {
				writef(" ");
			}
			l = l + 1;
		}
		writefln(" ");
		k = k - 1;
	}
	ret;
}

fn bubblesort() {
	target := i32[15]{6,7,1,12,10,15,4,3,11,13,9,5,14,8,2};
	i := 0;
	j := 0;
	tmp := 0;
	while(i < 15) {
		j = i + 1;
		while(j < 15) {
			display(target);
			if(target[i] > target[j]) {
				tmp = target[i];
				target[i] = target[j];
				target[j] = tmp;
			}
			j = j + 1;
		}
		i = i + 1;
	}
	display(target);
	ret;
}

